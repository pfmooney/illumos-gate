include $(SRC)/Makefile.master
include $(SRC)/cmd/Makefile.cmd

ROOTOPTPKG = $(ROOT)/opt/net-tests
TESTDIR = $(ROOTOPTPKG)/tests/forwarding

PROG = \
	ip_forwarding \
	ip_fwd_no_cksum \
	ip_fwd_partial_cksum \
	ip_fwd_full_cksum \
	ip_fwd_partial_cksum_lso \
	ip_fwd_full_cksum_lso

DOC = $(TESTDIR)/README

CMDS = $(PROG:%=$(TESTDIR)/%)
FILEMODE=0444
$(CMDS) := FILEMODE = 0555

include $(SRC)/test/Makefile.com

install: $(CMDS) $(DOC)

clobber: clean
	$(RM) $(CMDS) $(DOC)

$(CMDS) $(DOC): $(TESTDIR)

$(TESTDIR):
	$(INS.dir)

$(TESTDIR)/%: %
	$(INS.file)

$(TESTDIR)/%: %.ksh
	$(INS.rename)
